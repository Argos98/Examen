@using WebApp.Helpers;
<script src="~/Scripts/Views/Usuario/Editar.js"></script>
@{
    ViewBag.Title = "Registrar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@RenderPage("~/Views/Shared/_AdminInnerMenu.cshtml", new { Title = "Registrar usuario" })

<div class="container space-1 space-bottom-md-1">
    <form class="js-validate" id="frmEdition">
        <div class="loader"></div>
        <div class="alert alert-warning alert-dismissible fade show d-none js-login-message" id="alert_container" role="alert">
            <span id="alert_message"></span>
        </div>

        <p class="text-muted">
            Los campos marcados con un asterisco (*) son requeridos.
        </p>
        <div class="row">
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "Nombre", type: "text", label: "Nombre",
               placeHolder: "Nombre", required: true,
               mensajeValidacion: "Por favor ingrese el nombre del usuario")
            </div>
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "PrimerApellido", type: "text", label: "Primer apellido",
               placeHolder: "Primer apellido", required: true,
               mensajeValidacion: "Por favor ingrese el apellido.")
            </div>
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "SegundoApellido", type: "text", label: "Segundo apellido",
               placeHolder: "Segundo apellido", required: false)
            </div>
            <div class="col-sm-6 mb-6">
                <div class="form-group">
                    <label for="TipoIdentificacion">Tipo de identificación <span class="text-danger">*</span></label>
                    <select class="form-control js-form-filter-control" id="TipoIdentificacion" name="TipoIdentificacion" required>
                        <option value="">-- Seleccione una opción --</option>
                        <option value="Cedula">Cédula de identificación</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "Identificacion", type: "text", label: "Identificación",
               placeHolder: "ID12345", required: true,
               mensajeValidacion: "Por favor ingrese un valor válido.")
            </div>
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "NumeroTelefono", type: "text", label: "Número de teléfono",
               placeHolder: "+50688191246", required: true,
               mensajeValidacion: "Por favor ingrese un valor válido.")
            </div>
            <div class="col-sm-6 mb-6">
                @Html.CtrlInput(id: "CorreoElectronico", type: "email", label: "Correo electrónico",
               placeHolder: "nombre@mail.com", required: true,
               mensajeValidacion: "Por favor ingrese un correo electrónico válido.")
            </div>
            <div class="col-sm-6 mb-6">
                <div class="form-group">
                    <label for="Rol">Tipo de usuario <span class="text-danger">*</span></label>
                    <select class="form-control js-form-filter-control" id="Rol" required>
                        <option value="">-- Seleccione una opción --</option>
                        <option value="AdministradorAeropuerto">Administrador de aeropuerto</option>
                        <option value="AsistenteAeropuerto">Asistente de aeropuerto</option>
                        <option value="AdministradorAerolinea">Administrador de aerolínea</option>
                    </select>
                </div>
            </div>

            <div class="col-sm-6 mb-6">
                <div class="form-group">
                    <label for="Estado">Estado <span class="text-danger">*</span></label>
                    <select class="form-control js-form-filter-control" id="Estado" required>
                        <option value="">-- Seleccione una opción --</option>
                        <option value="HA">Habilitado</option>
                        <option value="DH">Deshabilitado</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row align-items-center mt-5">
            <div class="col-12 col-sm-12 text-right">
                <button type="button" class="btn btn-primary transition-3d-hover" id="btn-submit">Guardar</button>
                <button type="button" class="btn btn-danger transition-3d-hover" id="btn-eliminar">Eliminar</button>
                <a class="btn btn-secondary transition-3d-hover" href="/Usuario/Listar" role="button">Regresar</a>
            </div>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $.HSCore.components.HSValidation.init('.js-validate');
    });
</script>