@using WebApp.Helpers;
<script src="~/Scripts/Views/Cuenta/CrearCuenta.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Crear una cuenta";
}

<div class="container">
    <div class="row no-gutters">
        <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 space-3 space-lg-0">
            <!-- Form -->
            <form class="js-validate mt-5" id="createAccount">
                <div class="loader"></div>
                <div class="alert alert-warning alert-dismissible fade show d-none js-login-message" id="alert_container" role="alert">
                    <span id="alert_message"></span>
                </div>
                <!-- Title -->
                <div class="mb-7">
                    <h1 class="h3 text-primary font-weight-normal mb-0">Bienvenido a <span class="font-weight-semi-bold">Flay</span></h1>
                    <p>Complete el formulario para registrarse.</p>
                </div>
                <!-- End Title -->
                <!-- Form Group -->

                    @Html.CtrlInput(id: "CorreoElectronico", type: "email", label: "Correo electrónico",
               placeHolder: "nombre@mail.com", required: true,
               mensajeValidacion: "Por favor ingrese un correo electrónico válido.")

                <!-- End Form Group -->
                <!-- Form Group -->
    
                    @Html.CtrlInput(id: "Contrasena", type: "password", label: "Contraseña",
              placeHolder: "", required: true,
              mensajeValidacion: "Por favor ingrese un valor válido.")
         
                <!-- End Form Group -->
                <!-- Form Group -->
          
                    @Html.CtrlInput(id: "ConfirmarContrasena", type: "password", label: "Confirmar contraseña",
              placeHolder: "", required: true,
              mensajeValidacion: "Por favor ingrese un valor válido.")
           
                <!-- End Form Group -->
                <!-- Button -->
                <div class="row align-items-center mb-5">
                    <div class="col-5 col-sm-6">
                        <span class="small text-muted">¿Ya tiene una cuenta?</span>
                        <a class="small" href="@Url.Action("/InicioSesion")">Ingresar</a>
                    </div>
                    <div class="col-7 col-sm-6 text-right">
                        <button type="button" id="btn-create-account" class="btn btn-primary transition-3d-hover">Registrarse</button>
                    </div>
                </div>
                <!-- End Button -->
            </form>
            <!-- End Form -->
        </div>
    </div>
</div>
