@using WebApp.Helpers;
<script src="~/Scripts/Views/Puerta/Listar.js"></script>
@{
    ViewBag.Title = "Puertas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@RenderPage("~/Views/Shared/_AdminInnerMenu.cshtml", new { Title = "Puertas" })

<div class="container space-1">
    <div class="row justify-content-end">
        <a class="btn btn-primary" href='@Url.Action("Registrar", "Puerta")'>Registrar puerta</a>
    </div>
</div>

<div class="container space-1 space-bottom-md-3">
    @Html.CtrlTable(viewName: "Puerta", id: "tblPuertas", title: "Lista de puertas registradas",
    columnsTitle: "Id Puerta,Código de puerta,Código de aeropuerto,Tipo,Estado,Acciones", ColumnsDataName: "IdPuerta,CodigoPuerta,CodigoAeropuerto,Tipo,Estado", onSelectFunction: "BindFields")


    <div class="row align-items-center mt-3">
        <div class="col-12 col-sm-12 text-right">
            <a class="btn btn-secondary transition-3d-hover" href='@Url.Action("Detalle","Aeropuerto")' role="button">Regresar</a>
        </div>
    </div>
</div>


