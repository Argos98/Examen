@using WebApp.Helpers;
<script src="~/Scripts/Views/Dashboard/CommonDashboard.js"></script>
<script src="~/Scripts/Views/Dashboard/SuperAdmin.js"></script>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Content Section -->
<div class="bg-light">
    <div class="container space-1">
        <!-- div del loading -->
        <div class="loader"></div>
        <!-- Title -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h6 mb-0">Resumen general</h3>
            <div class="ml-lg-auto">
                <!-- Button -->
                <button id="btnActualizarDashboard" type="button" class="btn btn-success text-nowrap transition-3d-hover">
                    <span class="fas fa-sync small mr-2"></span>
                    Actualizar dashboard
                </button>
                <!-- End Button -->
            </div>
        </div>
        <!-- End Title -->
        <!-- Stats -->
        <div class="card-deck d-block d-lg-flex card-lg-gutters-3 mb-6">
            <!-- Card -->
            @Html.CtrlIndicator("TotalAeropuertos", "fa-plane-departure", "Total de aeropuertos", WebApp.Models.Controls.CtrlIndicatorModel.ColorDash.GREEN)
            <!-- End Card -->
            <!-- Card -->
            @Html.CtrlIndicator("TotalAerolineas", "fa-plane", "Total de aerolíneas", WebApp.Models.Controls.CtrlIndicatorModel.ColorDash.GREEN)
            <!-- End Card -->

        </div>
        <!-- End Stats -->
        <!-- Stats -->
        <div class="card-deck d-block d-lg-flex card-lg-gutters-3 mb-6">
            <!-- Card -->
            @Html.CtrlIndicator("TotalUsuarioCliente", "fa-users", "Total de clientes", WebApp.Models.Controls.CtrlIndicatorModel.ColorDash.BLUE)
            <!-- End Card -->
            <!-- Card -->
            @Html.CtrlIndicator("TotalVuelosRegistrados", "fa-plane-departure", "Total de vuelos registrados", WebApp.Models.Controls.CtrlIndicatorModel.ColorDash.BLUE)
            <!-- End Card -->
        </div>
    </div>
</div>
<!-- End Content Section -->
